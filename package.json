{
  "name": "cobrify",
  "private": true,
  "version": "4.1.0",
  "type": "module",
  "description": "Sistema de facturación y cobranza moderno para negocios en Perú",
  "scripts": {
    "dev": "vite",
    "dev:host": "vite --host",
    "build": "vite build",
    "lint": "eslint . --ext js,jsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "format": "prettier --write \"src/**/*.{js,jsx,css,md}\"",
    "mobile:sync": "npm run build && npx cap sync",
    "mobile:android": "npm run mobile:sync && npx cap open android",
    "mobile:ios": "npm run mobile:sync && npx cap open ios",
    "mobile:build": "npm run build && npx cap copy",
    "mobile:dev:android": "npx cap run android --livereload --external",
    "mobile:dev:ios": "npx cap run ios --livereload --external"
  },
  "dependencies": {
    "@capacitor-community/bluetooth-le": "^7.3.0",
    "@capacitor-community/fcm": "^7.1.3",
    "@capacitor-firebase/authentication": "^7.4.0",
    "@capacitor-firebase/messaging": "^7.4.0",
    "@capacitor-mlkit/barcode-scanning": "^8.0.0",
    "@capacitor/android": "^7.4.4",
    "@capacitor/app": "^7.1.0",
    "@capacitor/camera": "^8.0.0",
    "@capacitor/core": "^7.4.4",
    "@capacitor/filesystem": "^7.1.4",
    "@capacitor/ios": "^7.4.4",
    "@capacitor/push-notifications": "^7.0.3",
    "@capacitor/share": "^7.0.2",
    "@capacitor/splash-screen": "^7.0.3",
    "@capacitor/status-bar": "^7.0.4",
    "@hookform/resolvers": "^3.3.4",
    "axios": "^1.12.2",
    "capacitor-thermal-printer": "^0.2.5",
    "clsx": "^2.1.0",
    "date-fns": "^3.3.1",
    "dayjs": "^1.11.18",
    "firebase": "^12.4.0",
    "firebase-admin": "^13.5.0",
    "jspdf": "^3.0.3",
    "jspdf-autotable": "^5.0.2",
    "jszip": "^3.10.1",
    "lucide-react": "^0.323.0",
    "qrcode": "^1.5.4",
    "qrcode.react": "^4.2.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.50.0",
    "react-router-dom": "^6.22.0",
    "react-to-print": "^3.2.0",
    "recharts": "^2.15.4",
    "tailwind-merge": "^2.2.1",
    "thermal-printer-encoder": "^3.0.0",
    "xlsx": "^0.18.5",
    "zod": "^3.22.4",
    "zustand": "^4.5.0"
  },
  "devDependencies": {
    "@capacitor/assets": "^3.0.5",
    "@capacitor/cli": "^7.4.4",
    "@types/react": "^18.2.55",
    "@types/react-dom": "^18.2.19",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.17",
    "canvas": "^3.2.0",
    "eslint": "^8.56.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "postcss": "^8.4.35",
    "prettier": "^3.2.5",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.9.3",
    "vite": "^5.1.0"
  }
}
